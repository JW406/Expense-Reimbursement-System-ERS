<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>Project01</display-name>
  <welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>org.servlets.Home</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>org.servlets.Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>org.servlets.Register</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Requests</servlet-name>
    <servlet-class>org.servlets.Requests</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NewRequest</servlet-name>
    <servlet-class>org.servlets.NewRequest</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EditUserInfo</servlet-name>
    <servlet-class>org.servlets.EditUserInfo</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ChangePassword</servlet-name>
    <servlet-class>org.servlets.ChangePassword</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ViewAllEmployees</servlet-name>
    <servlet-class>org.servlets.ViewAllEmployees</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Api</servlet-name>
    <servlet-class>org.servlets.Api</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Requests</servlet-name>
    <url-pattern>/requests</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NewRequest</servlet-name>
    <url-pattern>/new_request</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditUserInfo</servlet-name>
    <url-pattern>/edit_userinfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChangePassword</servlet-name>
    <url-pattern>/change_password</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewAllEmployees</servlet-name>
    <url-pattern>/view-all-employees</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Api</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>
</web-app>
